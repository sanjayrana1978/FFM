    </div>
</form>
<script>

    $(document).ready(function () {
        $("#@Html.IdFor(model => model.EnableFacetFilter)").click(toggleEnableFacet);
        toggleEnableFacet();

        function toggleEnableFacet() {
            if ($('#@Html.IdFor(model => model.EnableFacetFilter)').is(':checked')) {
                $(".card-body").children('.form-group').show();
            } else {
                $(".card-body").children('.form-group').hide();
                $('#enableFacet').show();
            }
        }
    });

    $('input[type=checkbox]').each(function () {
        var item = $(this)[0].id;
        if (item != 'EnableRangePriceFilter' && !item.includes('OverrideForStore') && item != 'EnableFacetFilter') {
            if ($(this).prop("checked") == false) {
                $(this).parent().next().hide();
                $(this).parent().next().next().hide();
            }
            else if ($(this).prop("checked") == true) {
                $(this).parent().next().show();
                $(this).parent().next().next().show();
            }
        }
    });

    $('input[type="checkbox"]').click(function () {
        var item = $(this)[0].id;
        if (item != 'EnableRangePriceFilter' && !item.includes('OverrideForStore') && item != 'EnableFacetFilter') {
            if ($(this).prop("checked") == false) {
                $(this).parent().next().hide();
                $(this).parent().next().next().hide();
            }
            else if ($(this).prop("checked") == true) {
                $(this).parent().next().show();
                $(this).parent().next().next().show();
            }
        }
    });
</script>