            if ($('#@Html.IdFor(model => model.EnableScrollToTopFacetApplies)').is(':checked')) {
                $('#pnlSearchPageScrollFacetSelector').show();

            } else {
                $('#pnlSearchPageScrollFacetSelector').hide();
