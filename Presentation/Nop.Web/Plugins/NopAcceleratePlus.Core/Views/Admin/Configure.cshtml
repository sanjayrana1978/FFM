            function CheckSolrConnection() {
                var requestUrl = '@Url.Action("CheckSolrConnection", "NopAcceleratePlusCore")';
                var result = false;
                $.ajax({
                    type: 'GET',
                    url: requestUrl,
                    async: false,
                    success: function (data) {
                        if (data == 'True') {
                            $('#Connected').show();
                            $('#Disconnected').hide();
                            EnableButtons();
                            Refresh();
                            result = true;
                        } else if (data == 'False') {
                            $('#Connected').hide();
                            $('#Disconnected').show();
                            DisableButtons();
                            console.log(data);
                            result = false;
                        }
                    },
                    error: function (error) {
                        console.log(error);
                        showModelPopup("@T("Plugins.NopAcceleratePlus.Core.Menu.MainTitle")", error);
                        result = false;
                    }
                });
                return result;
            }

